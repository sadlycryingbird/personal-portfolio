{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",  // ✅ Ensures absolute imports work correctly
      "paths": {        // ✅ Supports `@/` alias for cleaner imports
        "@/*": ["./app/*"]
      },
      "plugins": [
        { "name": "next" }
      ]
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
, "jest.config.ts", "app/__mocks__/jest-css-modules-mock.js"    ],
    "exclude": [
      "node_modules"
    ]
  }
  